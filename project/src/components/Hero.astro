<section class="relative min-h-screen flex items-center pt-20">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img 
      src="https://images.pexels.com/photos/957024/forest-trees-fog-foggy-957024.jpeg?auto=compress&cs=tinysrgb&w=1600" 
      alt="Forest background" 
      class="w-full h-full object-cover object-center brightness-[0.75]"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-primary/60 to-transparent"></div>
  </div>
  
  <div class="container-custom relative z-10 py-20">
    <div class="max-w-2xl text-white">
      <h1 class="text-4xl md:text-5xl lg:text-6xl text-white mb-6 font-serif">
        Gentle as a forest.<br>
        Pure as your love.
      </h1>
      
      <p class="text-xl md:text-2xl mb-8 text-accent">
        天然｜舒敏｜安心<br>
        專為敏感毛孩設計的洗毛精
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="#sample" class="btn-primary">立即索取免費體驗包</a>
        <a href="#contact" class="btn border-2 border-white text-white hover:bg-white hover:text-primary">留下聯絡方式以搶先體驗</a>
      </div>
    </div>
    
    <!-- Floating leaf decoration -->
    <div class="absolute right-10 top-1/4 hidden lg:block">
      <img 
        src="https://images.pexels.com/photos/2237/leaves-fall-autumn.jpg?auto=compress&cs=tinysrgb&w=1600" 
        alt="Leaf decoration" 
        class="w-20 h-20 object-cover rounded-full shadow-lg leaf-float"
      />
    </div>
    <div class="absolute right-20 bottom-1/4 hidden lg:block">
      <img 
        src="https://images.pexels.com/photos/3571551/pexels-photo-3571551.jpeg?auto=compress&cs=tinysrgb&w=1600" 
        alt="Leaf decoration" 
        class="w-16 h-16 object-cover rounded-full shadow-lg leaf-float-delay"
      />
    </div>
  </div>
</section>